<div class="page-header">
  <h1>
    Descriptors
    <a href="/descriptors/new" class="btn btn-lg btn-success">New Descriptor</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Tag</th>
        <th>Actions</th>
      </tr>

      <% @descriptors.each do |descriptor| %>
      <tr>
        <td>
          <% if descriptor.restaurant.present? %>
            <a href="/restaurants/<%= descriptor.restaurant.id %>">
              <%= descriptor.restaurant.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if descriptor.tag.present? %>
            <a href="/tags/<%= descriptor.tag.id %>">
              <%= descriptor.tag.tag_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/descriptors/<%= descriptor.id %>" class="btn btn-primary">Show</a>
          <a href="/descriptors/<%= descriptor.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_descriptor/<%= descriptor.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @descriptors, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
